        <div class="col-md-3 col-sm-12"></div>

        <div class="col-md-6 col-sm-12">

            <div class="coffeed coffeed-shadow">
                <div class="coffeed-header" style="background-color:tomato">
                    <legend class="text-center" data-bs-toggle="collapse" href="#collapseQueryAdd" role="button" aria-expanded="false" aria-controls="collapseExample">Add a new Coffee</legend>
                </div>
                <div class="form-modal">
                <div class="coffeed-body collapse" id="collapseQueryAdd">
                    <form id="manForm">
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Vin Number</a>
                            <label for="vinNumber" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="vinNumber" aria-describedby="vinNumber" >
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Coffee Make</a>
                            <label for="coffeeMake" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="coffeeMake" aria-describedby="coffeeMake" >
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Coffee model</a>
                            <label for="coffeeModel" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="coffeeModel" aria-describedby="coffeeModel">
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Coffee Colour</a>
                            <label for="coffeeColour" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="coffeeColour" aria-describedby="coffeeColour" >
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Date of manufacture</a>
                            <label for="dom" class="form-label mt-4"></label>
                            <input type="date" class="form-control" onfocus="(this.type='date')" id="dom" aria-describedby="dom" >
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Exporter Name</a>
                            <label for="manName" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="manName" aria-describedby="manName" >
                            </div>
                        </div>      
                        </br>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" >
                                <button type="button" onclick="ManWriteData(event)" class="btn btn-secondary rounded-pill">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>

            </div>
        </div>
        <div class="col-md-3 col-sm-12"> 
        </div>

    </div>
