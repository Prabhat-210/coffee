<div class="container-fluid">
    <div class="row rowBox" >
        <div class="col-md-3 col-sm-12"></div>
        <div class="col-md-6 col-sm-12">
            <div class="coffeed coffeed-shadow">
                <div class="coffeed-header" style="background-color:tomato">
                    <legend class="text-center" data-bs-toggle="collapse" href="#collapseQueryRead" role="button" aria-expanded="false" aria-controls="collapseExample">Get Details of a Specific Coffee</legend>
                </div>
                <div class="coffeed-body collapse"  id="collapseQueryRead">
                    <form>
                        <div class="row .navbar-brand" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Vin Number</a>
                            <label for="QueryVinNumbMan" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="QueryVinNumbMan" aria-describedby="QueryVinNumbMan">
                            </div>
                        </div>
                        </br>
                        <button type="submit" onclick="ManQueryData(event)" class="btn btn-fill btn-secondary rounded-pill">Submit</button></br>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-12"></div>
    </div>
</div>
</br>

<div class="container-fluid">
    <div class="row rowBox" >
        <div class="col-md-3 col-sm-12"></div>
        <div class="col-md-6 col-sm-12">
            <div class="coffeed">
                <div class="coffeed-header" style="background-color:tomato">
                    <legend class="text-center" >Coffees in Factory</legend>
                </div>
                <div class="coffeed-body">
                   <div class="table-container">
      <table class="table" style="width:100%">
          <thead id="colored-table">
              <th>CoffeeId</th>
              <th>Color</th>
              <th>Make</th>
              <th>Model</th>
              <th>Owner</th>
              <th>Status</th>
              <th> </th>
          </thead>
          <tbody>
              {{#each itemList}}
              {{#ifequals this.Record.status "In Factory"}}
              <tr>
                  <td>{{this.Key}}</td>
                  <td>{{this.Record.color}}</td>
                  <td>{{this.Record.make}}</td>
                  <td>{{this.Record.model}}</td>
                  <td>{{this.Record.ownedBy}}</td>
                  <td>{{this.Record.status}}</td>
                  <td><button class="btn btn-success filled" onClick="getMatchingOrders('{{this.Key}}');">Get Matching Orders</button></td>

              </tr>
              {{/ifequals}}
              {{/each}}
          </tbody>
      </table>
  </div> 
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-12"></div>

    </div>
</div>
